<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <TableRow>
        <EditText
            android:layout_span="5"
            android:id="@+id/edtnum1"
            android:hint="num1>>"
            android:textSize="30dp"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/edtnum2"
            android:hint="num2>>"
            android:layout_span="5"
            android:textSize="30dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/num0"
            android:text="0"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num1"
            android:text="1"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num2"
            android:text="2"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num3"
            android:text="3"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num4"
            android:text="4"
            android:layout_width="70dp"
            android:textSize="18dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/num5"
            android:text="5"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num6"
            android:text="6"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num7"
            android:text="7"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num8"
            android:text="8"
            android:layout_width="70dp"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/num9"
            android:text="9"
            android:layout_width="70dp"
            android:textSize="18dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/add"
            android:layout_span="5"
            android:text="+"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/sub"
            android:layout_span="5"
            android:text="-"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/mul"
            android:layout_span="5"
            android:text="*"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/div"
            android:layout_span="5"
            android:text="/"
            android:textSize="30dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/text"
            android:layout_span="5"
            android:text="result:"
            android:textColor="#f00"
            android:textSize="30dp"/>
    </TableRow>


</TableLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:textColor="#fff"
        android:text="[ Shingu theator ]"
        android:textSize="40dp"
        android:background="#21B721"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="좌석번호:"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/seatno"
            android:hint="num>>"
            android:textSize="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/click"
            android:text="click"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:textColor="#fff"
        android:text="SCREEN"
        android:textSize="30dp"
        android:background="#0A1E8B"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TableLayout
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
        <TextView
            android:text="1"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="2"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="3"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="4"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="5"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="6"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="7"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="8"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="9"
            android:textAlignment="center"
            android:textSize="30dp"/>
        <TextView
            android:text="10"
            android:textAlignment="center"
            android:textSize="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/s0"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s1"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s2"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s3"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s4"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s5"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s6"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s7"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/s8"
                android:background="#15A0DF"
                android:layout_marginLeft="5dp"
                android:text="O"
                android:textSize="30dp"
                android:textAlignment="center"
                />
